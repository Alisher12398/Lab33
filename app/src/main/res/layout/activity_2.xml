<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2"
    android:background="@color/colorSilver2">



    <ImageView
        android:id="@+id/image_activity2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/testimage"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/image_activity2"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="20dp"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/title_activity2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Test text"
                android:textSize="25dp"
                android:textStyle="bold"

                app:layout_constraintBottom_toTopOf="@id/date_activity2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/calendar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:elevation="20dp"
                android:src="@drawable/calendar2"
                android:layout_marginRight="15dp"
                app:layout_constraintEnd_toStartOf="@id/date_activity2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_activity2" />

            <TextView

                android:id="@+id/date_activity2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Test date"
                android:textSize="15dp"

                app:layout_constraintBottom_toTopOf="@id/text_activity2"
                app:layout_constraintTop_toBottomOf="@id/title_activity2"
                android:layout_marginStart="30dp"/>

            <TextView
                android:id="@+id/text_activity2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Test news"
                android:textSize="20dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/date_activity2" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="180dp"
        android:elevation="20dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floating_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/colorMenu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â™¥"
            android:elevation="20dp"
            android:textSize="30sp"
            android:textColor="@android:color/white"

            app:layout_constraintTop_toTopOf="@id/floating_button"
            app:layout_constraintBottom_toBottomOf="@id/floating_button"
            app:layout_constraintStart_toStartOf="@id/floating_button"
            app:layout_constraintEnd_toEndOf="@id/floating_button"
            />

    </android.support.constraint.ConstraintLayout>


    <ImageButton
        android:id="@+id/image_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/arrowleft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp" />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/sharevariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"/>


</android.support.constraint.ConstraintLayout>